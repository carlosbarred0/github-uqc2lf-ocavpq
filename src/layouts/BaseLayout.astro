const {title} = Astro.props;
---
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="author" content="Carlos" />
    <meta name="keywords" content="HTML, CSS, Astro" />
    <title>BOOKS RECOMENDATION - {title}</title>
    <link rel="stylesheet" type="text/css" href={Astro.resolve('../styles/base.css')} />
    <link
 href="https://chatcompose.azureedge.net
/static/all/global/export/css/main.5b1b
d1fd.css" rel="stylesheet">
<script
async type="text/javascript"
src="https://chatcompose.azureedge.net/static/all/global/export/js/main.a7059cb5.js?user=rabel&lang=ES" user="rabel"
lang="ES"></script>
  </head> 
